<%= form_for @service, :html => { :class => 'well form-horizontal' } do |f| %>
  <% if @service.errors.any? %>  
  <div id="errorExplanation" class="alert alert-error">  
    <h2>Para salvar o usuario você deve resolver <%= pluralize_without_count("o", @service.errors.count) %> <%= pluralize_without_count("erro", @service.errors.count) %> encontrados:</h2>  
    <ul>  
    <% @service.errors.full_messages.each do |msg| %>  
      <li><%= msg %></li>  
    <% end %>  
    </ul>  
  </div>  
  <% end %>  

  <!--Notificações -->
  <% if flash[:error] %>
    <p class="error alert alert-error" id="notificationError"><%=h flash[:error] %><button class="close" data-dismiss="alert">×</button></p>
  <% end %>
  <% if flash[:success] %>
    <p class="success alert alert-success" id="notificationSuccess"><%=h flash[:success] %><button class="close" data-dismiss="alert">×</button></p>
  <% end %>
  <!-- Fim das notificações -->  

  <div class="control-group">
    <%= f.label :slug, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :slug, :class => 'span2' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'span5' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'span5' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :imagem, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :imagem, :class => 'span5' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :resumo, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :resumo, :class => 'span4', :placeholder => "Esta mensagem ficará disponivel no site." %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.cktext_area :description, :class => 'span5' %>    
    </div>
  </div>
  <div class="control-group">
    <%= f.label :servicetype_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :servicetype_id, Servicetype.all.collect { |servicetype| [servicetype.name, servicetype.id] }, { :include_blank => true }, :class => 'span3' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :circuit_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :circuit_name, Circuit.all.collect { |circuit| "#{circuit.origin_city} à #{circuit.destination_city}" }, { :include_blank => true }, :class => 'span4' %>
    </div>
  </div>


  <div class="form-actions">
    <%= f.submit 'Gravar', :class => 'btn btn-primary' %> 
    <%= link_to 'Cancelar', services_path, :class => 'btn' %>
  </div>

<% end %>
