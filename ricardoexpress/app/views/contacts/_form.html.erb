<%= form_for @contact, :html => { :class => 'well form-horizontal' } do |f| %>
  <% if @contact.errors.any? %>  
  <div id="errorExplanation" class="alert alert-error">  
    <h2>Para salvar o contato você deve resolver <%= pluralize_without_count("o", @contact.errors.count) %> <%= pluralize_without_count("erro", @contact.errors.count) %> encontrados:</h2>  
    <ul>  
    <% @contact.errors.full_messages.each do |msg| %>  
      <li><%= msg %></li>  
    <% end %>  
    </ul>  
  </div>  
  <% end %>  

  <!--Notificações -->
  <% if flash[:error] %>
    <p class="error alert alert-error" id="notificationError"><%=h flash[:error] %><button class="close" data-dismiss="alert">×</button></p>
  <% end %>
  <% if flash[:success] %>
    <p class="success alert alert-success" id="notificationSuccess"><%=h flash[:success] %><button class="close" data-dismiss="alert">×</button></p>
  <% end %>
  <!-- Fim das notificações -->  

  <!-- Inicio do formulário -->  
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'span5' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'span4' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :phone, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :phone, :class => 'span2' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :subject, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :subject, :class => 'span3' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :message, :class => "control-label" %>
    <div class="controls">
      <%= f.cktext_area :message, :class => 'span5' %>
    </div>    
  </div>
  <!-- Fim do formulário -->

  <!-- Inicio Ações -->
  <div class="form-actions">
    <%= f.submit 'Gravar', :class => 'btn btn-primary' %> 
    <%= link_to 'Cancelar', contacts_path, :class => 'btn' %>
  </div>
  <!-- Fim Ações -->  
<% end %>

<script type="text/javascript">
  $(document).ready(function(){
    $("#contact_phone").mask("(99)9999-9999");
  });
</script>