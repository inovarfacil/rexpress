<%- model_class = Service -%>
<div class="page-header">
  <h1>Serviço</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:slug) %>:</strong></dt>
  <dd><%= @service.slug %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @service.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @service.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:imagem) %>:</strong></dt>
  <dd><%= image_tag @service.imagem_url(:thumb) %></dd><br>
  <dt><strong><%= model_class.human_attribute_name(:resumo) %>:</strong></dt>
  <dd><%= @service.resumo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:resumo) %>:</strong></dt>
  <dd><%= @service.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:servicetype_id) %>:</strong></dt>
  <% servicetype = Servicetype.find(@service.servicetype_id) %>
  <% unless servicetype.blank? %>
    <dd><%= servicetype.name %></dd>
  <% else %>
    &nbsp;
  <% end %>  
  <dt><strong><%= model_class.human_attribute_name(:circuit_id) %>:</strong></dt>
  <dd><%= @service.circuit_name %></dd>
</dl>

<div class="form-actions">
  <%= link_to 'Voltar',
              services_path, :class => 'btn icon-arrow-left'  %>
  <%= link_to 'Editar',
              edit_service_path(@service), :class => 'btn icon-edit' %>
  <%= link_to 'Excluir',
              service_path(@service),
              :method => 'delete',
              :confirm => 'Tem certeza que deseja excluir este serviço?',
              :class => 'btn btn-danger icon-trash' %>
</div>