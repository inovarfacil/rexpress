<%- model_class = User -%>
<div class="page-header">
  <h1>Usuário</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @user.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:role_ids) %>:</strong></dt>
  <dd><%= @user.roles.first.name %></dd>  
  <dt><strong><%= model_class.human_attribute_name(:username) %>:</strong></dt>
  <dd><%= @user.username %></dd>
</dl>

<div class="form-actions">
  <%= link_to 'Voltar',
              users_path, :class => 'btn icon-arrow-left'  %>
  <%= link_to 'Editar',
              edit_user_path(@user), :class => 'btn icon-edit' %>
  <%= link_to 'Excluir',
              user_path(@user),
              :method => 'delete',
              :confirm => 'Tem certeza que deseja excluir este usuário?',
              :class => 'btn btn-danger icon-trash' %>
</div>