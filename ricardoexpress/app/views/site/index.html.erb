        </h2>                
    </div>
</article>        
</section>
<!-- Fim Slide -->  

<div id="showcase">
    <div class="caixa">
        <div class="section_header">
            <h3>Nossos serviços</h3>
        </div>            
        <div class="row feature_wrapper">
            <!-- Features Row -->
            <div class="features_op1_row">
                <!-- Feature -->
                <% @services = Service.all %>
                <% @services.each do |service| %>                
                    <div class="span4 feature">
                        <div class="img_box">
                            <%= link_to({:controller => "services", :action => "servico", :id => service.id}) do %>
                                <%= image_tag "service1.png" %>
                                <span class="circle"> 
                                <span class="plus">&#43;</span>
                                </span>
                            <% end %>
                        </div>
                        <div class="text">                            
                            <h6><%= service.name unless service.name.blank? %></h6>
                            <p>
                                <%= service.resumo unless service.resumo.blank? %>
                            </p>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>


