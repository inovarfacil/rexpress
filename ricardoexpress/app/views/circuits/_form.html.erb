<%= form_for @circuit, :html => { :class => 'well form-horizontal' } do |f| %>
  <% if @circuit.errors.any? %>  
  <div id="errorExplanation" class="alert alert-error">  
    <h2>Para salvar a rota você deve resolver <%= pluralize_without_count("o", @circuit.errors.count) %> <%= pluralize_without_count("erro", @circuit.errors.count) %> encontrados:</h2>  
    <ul>  
    <% @circuit.errors.full_messages.each do |msg| %>  
      <li><%= msg %></li>  
    <% end %>  
    </ul>  
  </div>  
  <% end %>  

  <!--Notificações -->
  <% if flash[:error] %>
    <p class="error alert alert-error" id="notificationError"><%=h flash[:error] %><button class="close" data-dismiss="alert">×</button></p>
  <% end %>
  <% if flash[:success] %>
    <p class="success alert alert-success" id="notificationSuccess"><%=h flash[:success] %><button class="close" data-dismiss="alert">×</button></p>
  <% end %>
  <!-- Fim das notificações -->  

  <div class="control-group">
    <%= f.label :origin_city, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :origin_city, :data => { :autocomplete_source => ces_path }, :class => 'span4' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :destination_city, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :destination_city, :data => { :autocomplete_source => ces_path }, :class => 'span4' %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit 'Gravar', :class => 'btn btn-primary' %> 
    <%= link_to 'Cancelar', circuits_path, :class => 'btn' %>
  </div>

<% end %>
