<%= form_for @client, :html => { :class => 'well form-horizontal' } do |f| %>
  <% if @client.errors.any? %>  
  <div id="errorExplanation" class="alert alert-error">  
    <h2>Para salvar o usuario você deve resolver <%= pluralize_without_count("o", @client.errors.count) %> <%= pluralize_without_count("erro", @client.errors.count) %> encontrados:</h2>  
    <ul>  
    <% @client.errors.full_messages.each do |msg| %>  
      <li><%= msg %></li>  
    <% end %>  
    </ul>  
  </div>  
  <% end %>  

  <!--Notificações -->
  <% if flash[:error] %>
    <p class="error alert alert-error" id="notificationError"><%=h flash[:error] %><button class="close" data-dismiss="alert">×</button></p>
  <% end %>
  <% if flash[:success] %>
    <p class="success alert alert-success" id="notificationSuccess"><%=h flash[:success] %><button class="close" data-dismiss="alert">×</button></p>
  <% end %>
  <!-- Fim das notificações -->  

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'span5' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :phone, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :phone, :class => 'span2' %>
      <p class="help-block" style="display:inline">Digite apenas números</br></p>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cellphone, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :cellphone, :class => 'span2' %>
      <p class="help-block" style="display:inline">Digite apenas números</br></p>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :address, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :address, :class => 'span5' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :city, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :city, :data => { :autocomplete_source => ces_path }, :class => 'span4' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'span5' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :observations, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :observations, :class => 'span5' %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit 'Gravar', :class => 'btn btn-primary' %> 
    <%= link_to 'Cancelar', clients_path, :class => 'btn' %>
  </div>

<% end %>

<script type="text/javascript">
  jQuery(function($){ 
    $("#client_phone").mask("(99)9999-9999");
    $("#client_cellphone").mask("(99)9999-9999");
   });
</script>
